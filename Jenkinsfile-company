pipeline {
    agent any

    environment {
        CI = 'true'
    }

    triggers {
        cron('0 3 * * *')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install deps') {
            steps {
                bat 'npm ci'
                bat 'npx playwright install --with-deps'
            }
        }

        stage('Run PUMB company tests') {
            steps {
                bat 'npx playwright test --config=playwright-company.config.ts tests/pumb-company-tests'
            }
        }

        stage('Allure report') {
            steps {
                // Генеруємо HTML‑звіт Allure
                bat 'npx allure generate allure-results -o allure-report --clean'
                // Архівуємо Allure‑звіт
                archiveArtifacts artifacts: 'allure-report/**', fingerprint: true
            }
        }
    }

    post {
        always {
            junit 'tests/pumb-company-tests/test-results/*.xml'
            archiveArtifacts artifacts: 'playwright-report/**', fingerprint: true
        }
    }
}
