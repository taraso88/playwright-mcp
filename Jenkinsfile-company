pipeline {
    agent any

    environment {
        CI = 'true'
    }

    triggers {
        cron('0 3 * * *')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install deps') {
            steps {
                bat 'npm ci'
                bat 'npx playwright install --with-deps'
            }
        }

        stage('Run PUMB company tests') {
    steps {
        bat 'npx playwright test --config=playwright-company.config.ts tests/pumb-company-tests'
        // ДІАГНОСТИКА: показати, де з’явився allure-results
        bat 'dir /s /b allure-results'
    }
}
        stage('Allure report') {
    steps {
        // Якщо результати в корені:
        // bat 'npx allure generate --output allure-report "allure-results"'

        // Якщо результати в tests/pumb-company-tests/allure-results:
        // bat 'npx allure generate --output allure-report "tests/pumb-company-tests/allure-results"'

        bat 'npx allure generate --output allure-report "allure-results"'
        archiveArtifacts artifacts: 'allure-report/**', fingerprint: true
    }
}

    }

    post {
        always {
            junit 'tests/pumb-company-tests/test-results/*.xml'
            archiveArtifacts artifacts: 'playwright-report/**', fingerprint: true
        }
    }
}
