pipeline {
    agent any

    environment {
        CI = 'true'
    }

    triggers {
        cron('0 3 * * *')
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Install deps') {
            steps {
                bat 'npm ci'
                bat 'npx playwright install --with-deps'
            }
        }

        stage('Run PUMB company tests') {
            steps {
                bat 'npx playwright test --config=playwright-company.config.ts tests/pumb-company-tests'
                // Діагностика: покажемо, де з'явився allure-results (можна буде потім забрати)
                bat 'dir /s /b allure-results'
            }
        }

        stage('Allure report') {
            steps {
                // Генеруємо звіт, очищаючи попередній allure-report
                bat 'npx allure generate "allure-results" --clean -o "allure-report"'
                archiveArtifacts artifacts: 'allure-report/**', fingerprint: true
            }
        }
    }

    post {
        always {
            junit 'tests/pumb-company-tests/test-results/*.xml'
            archiveArtifacts artifacts: 'playwright-report/**', fingerprint: true
        }
    }
}
