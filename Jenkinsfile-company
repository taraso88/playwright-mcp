                checkout scm
            }
        }

        stage('Install deps (company)') {
            steps {
                dir('tests/pumb-company-tests') {
                    bat 'npm ci'
                    bat 'npx playwright install --with-deps'
                }
            }
        }

        stage('Run company Playwright tests') {
            steps {
                dir('tests/pumb-company-tests') {
                    bat 'npm run test'
                }
            }
            post {
                always {
                    // JUnit-звіти для Jenkins
                    junit 'tests/pumb-company-tests/test-results/*.xml'
                    // HTML‑звіт Playwright
                    archiveArtifacts artifacts: 'tests/pumb-company-tests/playwright-report/**', fingerprint: true
                }
            }
        }
    }
}


